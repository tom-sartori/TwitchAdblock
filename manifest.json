{
  "manifest_version": 3,
  "name": "Twitch add blocker",
  "version": "1.0",
  "description": "Remove textual ads from Twitch. Do not remove video ads.",
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://twitch.tv/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}
